<style>
   h2 {
    color: #5C755E;
    font-size: 28px;
    font-weight: bold;
}

p {
    color: #A9B49A;
    font-size: 18px;
}

.voluntario {
    background-color: #D6E8D2;
    padding: 20px;
    text-align: center;
}

.voluntario-canais {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
}

.canal {
    position:relative;
    background-color: #E1F4DF;
    border-radius: 10px;
    padding: 10px;
    width: 250px;
    left:100px;

}
.canal1 {
    position:relative;
    background-color: #E1F4DF;
    border-radius: 10px;
    padding: 10px;
    width: 250px;
    top:195px;
    right:170px;

}
.canal2 {
    position:relative;
    background-color: #E1F4DF;
    border-radius: 10px;
    padding: 10px;
    width: 250px;
    right:170px;
}

.canal-content {
    background-color: #DFF4DC;
    height: 100px;
    margin-bottom: 10px;
    border-radius: 10px;
    font-size:40px;
}

.descarte {
    background-color: #E1F4DF;
    padding: 20px;
    text-align: center;
    margin-top: 20px;
}

.mapa {
    margin: 20px 0;
}

.tipos-descarte {
    position:relative;
    margin-top: 20px;
    font-size:25px;
    font-family:Kodchasan;
    color:#4e6137;
    top:10px;
}

.tipos-descarte img {
    width: 100%;
    max-width: 600px;
}

.tabela-oculta {
        display: none; /* Oculta a tabela */
    }

 (max-width: 768px) {
    .voluntario-canais {
        flex-direction: column;
        align-items: center;
    }

    .tipos-descarte img {
        width: 100%;
    }

}
</style>

<table class="tabela-oculta">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>CPF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadastro in Model.Cadastros1)
        {
            <tr>
                <td>@cadastro.ID_User</td>
                <td>@cadastro.Nome_User</td>
                <td>@cadastro.Email_User</td>
                <td>@cadastro.CPF</td>
            </tr>
        }
    </tbody>
</table>

<table class="tabela-oculta">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome do Produto</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Categoria</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos1)
        {
            <tr>
                <td>@produto.ID_Produtos</td>
                <td>@produto.Nome_Produto</td>
                <td>@produto.preco_produto</td>
                <td>@produto.Estoque</td>
                <td>@produto.Categoria</td>
                <td>@produto.descricao</td>
            </tr>
        }
    </tbody>
</table>
